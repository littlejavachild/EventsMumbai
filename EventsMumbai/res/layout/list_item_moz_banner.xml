<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@android:color/transparent">
    
    <ImageView android:layout_alignParentLeft="true"
        android:id="@+id/gatewayLogo"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/list_item_padding"
        android:src="@drawable/gateway" />
    
    <TextView android:layout_toRightOf="@id/gatewayLogo" 
        android:id="@+id/banner_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_item_textSize" 
        android:textColor="@android:color/black" 
        android:textStyle="bold" 
        android:text="@string/banner"
        android:typeface="monospace"
		android:paddingTop="10dp"
        android:layout_alignBaseline="@id/gatewayLogo"
        android:layout_centerInParent="true"/>

</RelativeLayout>
